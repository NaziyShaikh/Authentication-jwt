{
  "services": [
    {
      "type": "web",
      "name": "frontend",
      "buildCommand": "cd frontend && npm install && npm run build",
      "startCommand": "serve -s build",
      "env": {
        "REACT_APP_API_URL": "[https://authentication-jwt-0dlk.onrender.com](https://authentication-jwt-0dlk.onrender.com)"
      },
      "build": {
        "publish": [
          "build"
        ]
      }
    },
    {
      "type": "web",
      "name": "backend",
      "buildCommand": "npm install",
      "startCommand": "node server.js",
      "env": {
        "PORT": "3000",
        "NODE_ENV": "production",
        "JWT_SECRET": "your-secret-key"
      }
    }
  ]
}